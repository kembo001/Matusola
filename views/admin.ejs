            </div>

            <!-- Image management section -->
            <div class="image-management" data-vehicle-id="<%= vehicle.id %>">
              <div class="current-images grid grid-cols-4 gap-2">
                <% vehicle.images.forEach(image => { %>
                <div class="image-container" data-image-num="<%= image.number %>">
                  <img src="<%= image.url %>" alt="Vehicle image <%= image.number %>" class="w-full h-20 object-cover rounded" />
                  <div class="image-controls flex justify-between mt-1">
                    <button type="button" class="delete-image text-red-600 text-sm" title="Delete image">Delete</button>
                    <div class="rotation-controls">
                      <button type="button" class="rotate-left text-sm" title="Rotate left">↺</button>
                      <button type="button" class="rotate-right text-sm" title="Rotate right">↻</button>
                    </div>
                  </div>
                </div>
                <% }); %>
              </div>

              <div class="mt-2">
                <input type="file" id="new-images-<%= vehicle.id %>" multiple accept="image/*" class="text-sm" />
                <button type="button" class="save-images bg-blue-500 text-white px-2 py-1 rounded text-sm">Save Changes</button>
